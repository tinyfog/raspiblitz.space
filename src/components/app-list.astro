---
import { Icon } from "astro-icon";
const { title, data, url } = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
  <div class="relative px-6 pt-8 pb-4 border bg-offset border-2 border-dashed border-default">
    <h3
      class="absolute top-0 px-4 py-1 text-xs tracking-tight -translate-y-1/2 border-2 border-dashed border-current rounded-full right-4 bg-default"
    >
      {title}
    </h3>
    <ul class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6 items-center">
      {
        data.map(({ title, icon, url }) => (
          <li>
            <a class="flex flex-col items-center gap-2" href={url}>
              <Icon class="h-12" name={icon} />
              <span>{title}</span>
            </a>
          </li>
        ))
      }
      <li>
        <a class="flex flex-col items-center gap-2" href={url}> ...and more &rarr;</a>
      </li>
    </ul>
  </div>
</div>
